@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>Cliente Service</h1>
    <button type="button" class="btn btn-default" data-bind="click: IncuirCliente">Add Cliente</button>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Clientes</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: GetClientes">
                    <li>
                        <strong>
                            <span data-bind="text: ID"></span> | <span data-bind="text: Nome"></span>
                        </strong>                        
                        <!-- New code -->
                        <small><a href="#" data-bind="click: $parent.GetUpdateCliente">Update</a></small>
                        <small><a href="#" data-bind="click: $parent.deleteCliente">Delete</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error.Nome"><text data-bind="text:error.Nome"></text></div>
        <div class="alert alert-danger" data-bind="visible: error.CpfCnpj"><text data-bind="text:error.CpfCnpj"></text></div>
        <div class="alert alert-danger" data-bind="visible: error.Telefone"><text data-bind="text:error.Telefone"></text></div>
        
    </div>
    <div class="col-md-4" data-bind="visible: GetUpdate">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Update Cliente</h2>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: updateCiente">
                    <div class="form-group" data-bind="with: GetUpdate">
                        <label for="inputNome" class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputUPNome" data-bind="value:Nome" />
                        </div>
                        <label for="inputCpfCnpj" class="col-sm-2 control-label">CPF/CNPJ</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputUPCpfCnpj" data-bind="value:CpfCnpj" />
                        </div>

                        <label for="inputTelefone" class="col-sm-2 control-label">Telefone</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputUPTelefone" data-bind="value:Telefone" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4" data-bind="visible: btnIncuir">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Cliente</h2>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addCliente">                    
                    <div class="form-group" data-bind="with: newCliente">
                        <label for="inputNome" class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputNome" data-bind="value:Nome" />
                        </div>

                        <label for="inputCpfCnpj" class="col-sm-2 control-label">CPF/CNPJ</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputCpfCnpj" data-bind="value:CpfCnpj" />
                        </div>

                        <label for="inputTelefone" class="col-sm-2 control-label">Telefone</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputTelefone" data-bind="value:Telefone" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                    <button type="button" class="btn btn-default" data-bind="click: Cancelar">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
    
    
</div>